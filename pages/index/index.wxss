/**index.wxss**/
page {
    background-color: #fff;
}

.container {
    width: 100%;
    height: 100%;
    padding-bottom: 120rpx;
}

.section {
    display: flex;
    align-items: center;
    width: 100%;
    height: 85rpx;
    background: #fff;
}

.nav {
    flex: 1;
    height: 100%;
    display: flex;
    justify-content: space-around;
    font-size: 24rpx;
    box-sizing: border-box;
    white-space: nowrap;
}

.nav-item {
    display: inline-block;
    height: 100%;
    line-height: 65rpx;
}

.nav-item.active {
    position: relative;
    color: #fc975c;
}

.nav-item.active::after {
    position: absolute;
    content: '';
    left: 0;
    right: 0;
    bottom: 12rpx;
    width: 48rpx;
    height: 6rpx;
    margin: 0 auto;
    background-color: #fc975c;
}

.icon_img {
    width: 40rpx;
    height: 40rpx;
}

.icon_img.me {
    margin-left: 30rpx;
    margin-right: 20rpx;
}

.icon_img.menu {
    margin-left: 20rpx;
    margin-right: 30rpx;
}

.map-wrapper {

}

.map {
    width: 100%;
    height: 476rpx;
}

.notice-wrapper {
    position: relative;
    padding: 20rpx 20rpx 20rpx 100rpx;
    font-size: 28rpx;
    background-color: antiquewhite;
    overflow: hidden;
}

.notice-wrapper .title {
    position: absolute;
    left: 0;
    top: 0;
    width: 85rpx;
    height: 100%;
    padding-left: 20rpx;
    line-height: 80rpx;
    background-color: antiquewhite;
    z-index: 1;
}

@keyframes move {
    0% {
        transform: translateX(110%);
    }

    100% {
        transform: translateX(-250%);
    }
}

.notice-wrapper .notice-inner {
    display: block;
    white-space: nowrap;
    animation: move 30s linear infinite;
}


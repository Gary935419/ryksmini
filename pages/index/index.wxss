}

/* 代驾 */
.get-wrapper .driving-btn-wrapper {
    display: flex;
    justify-content: space-around;
    align-items: center;
    width: 100%;
    height: 150rpx;
    background: #fff;
    box-shadow: 0 10rpx 10rpx 0 rgba(0, 0, 0, 0.23);
}

.get-wrapper .driving-btn-wrapper .btn {
    width: 192rpx;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 24rpx;
    text-align: center;
    background: #fff;
    box-shadow: 0 10rpx 10rpx 0 rgba(90, 86, 86, 0.35);
    border-radius: 40rpx;
}

.get-wrapper .driving-btn-wrapper .btn.active {
    background-color: #FD761B;
    color: #fff;
}

.submit-wrapper {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 45rpx;
    background-color: #fff;
    box-shadow: 0 -4rpx 24rpx 0 rgba(0, 0, 0, 0.1);
    z-index: 300;
}

.submit-wrapper .submit-btn {
    width: 240rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin: 0;
    padding: 0 20rpx;
    font-size: 28rpx;
    background-color: #fdcd15;
    border-radius: 20rpx;
    color: #333;
}

@keyframes fadeInUp {
    0% {
        transform: translate(0, 100%);
        -webkit-transform: translate(0, 100%);
    }

    100% {
        transform: translate(0, 0);
        -webkit-transform: translate(0, 0);
    }
}

@-webkit-keyframes fadeInUp{
    0% {
        transform: translate(0, 100%);
        -webkit-transform: translate(0, 100%);
    }

    100% {
        transform: translate(0, 0);
        -webkit-transform: translate(0, 0);
    }
}

.reward-wrapper {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 444rpx;
    background-color: #fff;
    transform: translate(0, 100%);
    z-index: 801;
}

.reward-wrapper.reward-wrapper-show {
    animation: fadeInUp 0.3s forwards;
}

.reward-wrapper .title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 44rpx;
    padding: 30rpx 0;
    font-size: 28rpx;
    border-bottom: 1rpx solid #D5D5D5;
}

.reward-wrapper .select-price {
    padding: 18rpx 136rpx;
}

.reward-wrapper .select-price .item {
    display: flex;
    justify-content: space-between;
}

.reward-wrapper .select-price .item .price-item {
    width: 176rpx;
    height: 68rpx;
    margin: 18rpx 0;
    line-height: 68rpx;
    text-align: center;
    font-size: 28rpx;
    border: 1rpx solid rgba(213, 213, 213, 0.53);
    border-radius: 14rpx;
    color: #484141;
}

.reward-wrapper .select-price .item .price-item.active {
    background-color: #FF9046;
    color: #fff;
    border: none;
}

.reward-wrapper .input-wrapper {
    display: flex;
    align-items: center;
    margin: 0 70rpx;
    padding: 12rpx 24rpx 12rpx 144rpx;
    border-radius: 20rpx;
    border: 1rpx solid rgba(213, 213, 213, 0.53);
}

.reward-wrapper .input-wrapper input {
    flex: 1;
    font-size: 28rpx;
    color: #484141;
}

.input-address-detail {
    margin-bottom: 20rpx;
    padding-left: 40rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #ccc;
}

.normal-btn {
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    border: 1rpx solid #ccc;
    border-radius: 8rpx;
}



/* 修改radio默认样式 */
radio .wx-radio-input {
    border-radius: 0;
}

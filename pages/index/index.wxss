/* 帮我取 */
.get-wrapper {

}

.get-wrapper .choose {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 60rpx 0;
    background-color: #fff;
    box-shadow: 0 10rpx 10rpx 0 rgba(0, 0, 0, 0.23);
}

.get-wrapper .choose2 {
    justify-content: flex-start;
    padding-left: 26rpx;
}

.get-wrapper .choose .title {
    font-size: 32rpx;
    font-weight: 500;
}

.get-wrapper .choose2 .title {
    width: 160rpx;
}

.get-wrapper .choose .radio-group {
    display: flex;
    align-items: center;
}

.get-wrapper .choose .radio-group .label {
    display: flex;
    align-items: center;
    margin-right: 20rpx;
}

.get-wrapper .choose .radio-group .label radio {
    transform: scale(0.5);
}

.get-wrapper .choose .radio-group .label .name {
    font-size: 28rpx;
}

.choose2-form-wrapper {
    padding: 20rpx;
}

.choose2-form-item {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.choose2-form-label {
    margin-right: 20rpx;
}

.choose2-form-value {
    flex: 1;
    color: #999;
}

.get-wrapper .func {
    padding: 24rpx 10rpx;
    background: linear-gradient(0deg, rgba(255, 119, 28, 1) 0%,rgba(255, 198, 159, 1) 100%);
}

.get-wrapper .func .write-wrapper,
.get-wrapper .func .select-wrapper {
    background-color: #fff;
    box-shadow: 6rpx 8rpx 10rpx 0 rgba(0, 0, 0, 0.23);
    border-radius: 20rpx;
}

.get-wrapper .func .write-wrapper, 
.get-wrapper .func .select-wrapper {
    padding: 30rpx;
}

.get-wrapper .func .write-wrapper .write-item,
.get-wrapper .func .select-wrapper .write-item {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

/* .get-wrapper .func .write-wrapper .write-item:nth-child(1),
.get-wrapper .func .select-wrapper .write-item:nth-child(1) {
    margin-bottom: 20rpx;
} */

.get-wrapper .func .write-wrapper .write-item>input,
.get-wrapper .func .select-wrapper .write-item>input {
    flex: 1;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #ccc;
}


.get-wrapper .func .write-wrapper {
    margin-bottom: 20rpx;
}


/* pages/pay/pay.wxss */

page {
    background-color: #F8F8F8;
}

.top {
    width: 100%;
    height: 512rpx;
    background: linear-gradient(135deg, rgba(255, 109, 11, 1), rgba(253, 168, 111, 1));
}

.top > .title {
    position: absolute;
    width: 100%;
    text-align: center;
    color: #fff;
}

.top>image {
    position: absolute;
    left: 30rpx;
    width: 35rpx;
    height: 35rpx;
}

.main-wrapper {
    height: 780rpx;
    text-align: center;
    margin: -160rpx 16rpx 0;
    box-sizing: border-box;
    background-color: #fff;
    border-radius: 10rpx;
}

.main-wrapper .price-wrapper {
    padding: 120rpx 0 72rpx;
    border-bottom: 1rpx solid #F2EDED;
    box-sizing: border-box;
}

.main-wrapper .price-wrapper>.title {
    font-size: 40rpx;
    font-weight: 700;
    color: rgba(2, 2, 2, 1);
}

.main-wrapper .price-wrapper .price {
    margin: 52rpx 0 120rpx;
    font-size: 48rpx;
    font-weight: 400;
    color: rgba(239, 54, 38, 1);
}

.main-wrapper .price-wrapper .total {
    font-size: 26rpx;
    font-weight: 400;
    color: rgba(171, 171, 171, 1);
}

.main-wrapper .way {
    padding: 80rpx 32rpx 84rpx;
}

.main-wrapper .way > .title {
    margin-bottom: 30rpx;
    font-size: 26rpx;
    color: rgba(99, 88, 88, 1);
}

.main-wrapper .way .way-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.main-wrapper .way .way-content .icon-wrapper {
    display: flex;
}

.main-wrapper .way .way-content .icon-wrapper > image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 16rpx;
}

.main-wrapper .way .way-content .mark {
    width: 40rpx;
    height: 40rpx;
}

.pay-btn {
    width: 712rpx !important;
    height: 86rpx;
    margin-top: 60rpx;
    font-size: 36rpx;
    background: linear-gradient(71deg, rgba(255, 109, 11, 1), rgba(255, 158, 94, 1));
    border-radius: 20rpx;
    color: #83471B;
}

/* pages/my/wallet/applyInvoice/selectItem/writeInvoice/writeInvoice.wxss */
page {
    background-color: #F8F8F8;
}

.wrapper {
    padding: 0 26rpx;
}

.title {
    padding: 24rpx 0 20rpx;
    font-size: 24rpx;
    font-family: Adobe Heiti Std;
    font-weight: normal;
    color: rgba(105,103,103,1);
}

.sel-wrapper {
    display: flex;
    width: 100%;
    height: 224rpx;
    background: rgba(255,255,255,1);
    box-shadow: 3px 4px 5px 0px rgba(232,231,234,0.54);
}

.sel-wrapper .sel {
    display: flex;
    justify-content: center;
    flex: 1;
    height: 45rpx;
    padding: 32rpx 0 16rpx;
}

.sel.active {
    border-bottom: 4rpx solid #10B114;
}

radio .wx-radio-input {
    width: 30rpx;
    height: 30rpx;
}

.detail-wrapper {
    background-color: #fff;
    box-shadow:3px 4px 5px 0px rgba(232,231,234,0.54);
}

.detail-item {
    display: flex;
    justify-content: space-between;
    padding: 26rpx 12rpx;
    border-bottom: 1rpx solid #DCDCDC;
}

.self-label {
    flex: 1;
}

.self-label-txt {
    font-size: 32rpx;
    font-family: Adobe Heiti Std;
    font-weight: normal;
    color: rgba(117,117,117,1);
}

.self-label-symbol {
    color: #D72007;
}

.self-right {

}

.self-radio-group {
    display: flex;
}

.self-radio-group-label {
    display: flex;
}

.detail-item-remark {
    display: flex;
    flex-direction: column;
    padding-bottom: 0;
    border-bottom: none;
}

.detail-item-remark .remark-input {
    height: 84rpx;
    padding-left: 36rpx;
    background-color: #F8F8F8;
}

.detail-item-remark .remark-look {
    padding: 10rpx 0;
    font-size: 24rpx;
    text-align: right;
    font-family: Adobe Heiti Std;
    font-weight: normal;
    color: rgba(117,117,117,1);
}

.sure-btn {
    width: 100% !important;
    margin: 92rpx 0 120rpx !important;
    background-color: #10B114;
    color: #fff;
}
image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 4%;
}

.add-image, .up-pic image {
  margin-top: 2%;
  margin-left: 2%;
  width: 150rpx;
  height: 150rpx;
  color: #ddd;
  font-size: 144rpx;
  line-height: 95%;
  text-align: center;
  background-color: #fff;
  cursor: pointer;
  border-radius: 10rpx;
}

.picture_list {
  padding: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.picture_item {
  margin: 10px;
  margin-left: 0;
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.picture_item .del {
  position: absolute;
  top: -11rpx;
  right: -11rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  background-color: #f00;
}

.upload_progress {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  border-radius: 8rpx;
  background-color: #000;
  color: #fff;
  width: 167rpx;
  height: 160rpx;
  text-align: center;
  line-height: 160rpx;
  font-size: 12px;
}

.picture_item image {
  width: 160rpx;
  height: 160rpx;
}

.yes-upload {
  color: #fff;
  background-color: #00a0e9;
  border-radius: 25rpx;
  margin-bottom: 1.875rem;
}
